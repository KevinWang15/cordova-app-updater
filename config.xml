<?xml version='1.0' encoding='utf-8'?>
<widget id="cn.kevinwang.cordovaappupdater" version="0.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaAppUpdater</name>
    <description>
        An easy-to-use, efficient, powerful tool to remote update your cordova app.
    </description>
    <author email="14307130048@fudan.edu.cn">
        KevinWang
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="*://*/*"/>
    <preference name="AutoHideSplashScreen" value="false" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
